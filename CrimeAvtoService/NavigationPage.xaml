<?xml version="1.0" encoding="utf-8" ?>
<Shell x:Class="CrimeAvtoService.NavigationPage"
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:local="clr-namespace:CrimeAvtoService"
        xmlns:views="clr-namespace:CrimeAvtoService"
        Shell.FlyoutBehavior="Disabled">
    
    <TabBar>
        <Tab Title="Карта" >
            <ShellContent x:Name="mapPage"
                          ContentTemplate="{DataTemplate views:MapPage}" />
        </Tab>
        <Tab Title="Сервисы">
            <ShellContent x:Name="reviewPage"
                          ContentTemplate="{DataTemplate views:ReviewPage}" />
        </Tab>
        <Tab Title="Профиль">
            <ShellContent x:Name="profilePage"
                ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>
</Shell>